  <div class="container pt-4">
  <div class="bg-gray-100 text-center p-4  border-t-2 border-r-2 border-b-2 border-l-4 border-gray-200">

  <!-- component -->
  <div class="flex items-center justify-center">

  	<div class="container">
      <table class="w-full flex flex-row flex-no-wrap sm:bg-white overflow-hidden sm:shadow-lg ">
  			<tbody class="flex-1 sm:flex-none">


          <div class="  rounded-t-2xl ">
            <div class=" flex flex-col flex-no wrap w-full">
              <br>

              <div class="bg-teal-300 p-3 " >
                <span style="font-size:200%;">
                  All Orders
                </span>
              </div>

            </div>
          </div>

          <% if @orders.count > 0 %>

          <% @orders.each do |order| %>



          				<tr class="flex flex-col flex-no wrap sm:table-row mb-2 sm:mb-0 bg-gray-100 border-grey-400 mb-4">

                    <td class="border-grey-light border hover:bg-gray-100 p-3">
                      <!-- Purchaser: <%= order.purchaser.name %> -->
                      <strong>Purchaser:</strong>
                      <br>
                      <%= link_to "#{order.purchaser.name}", purchaser_path(order.purchaser) %>
                    </td>

                    <td class="border-grey-light border hover:bg-gray-100 p-3">
                      <strong>Vendor:</strong>
                      <br>
                      <%= order.vendor %>
                    </td>

                    <td class="border-grey-light border hover:bg-gray-100 p-3">
                      <strong>Order:</strong>
                      <br>
                      <%= order.amount %>
                      <%= order.content %>
                    </td>

                    <td class="border-grey-light border hover:bg-gray-100 p-3">
                      <strong>PO #:</strong>
                      <br>
                      <%= order.po_number %>
                    </td>

                    <td class="border-grey-light border hover:bg-gray-100 p-3">
                      <strong>Recieved:</strong>
                      <br>
                      <% if order.date_recieved.present? != true %>
                        n/a
                      <% else%>
                      <%= " #{order.date_recieved.strftime("%m-%d-%y")}" %>
                      <% end %>
                    </td>

                    <td class="border-grey-light border hover:bg-gray-100 p-3">
                      <strong>Delivered:</strong>
                      <br>
                      <% if order.date_delivered.present? != true %>
                        n/a
                      <% else%>
                      <%= " #{order.date_delivered.strftime("%m-%d-%y")}" %>
                      <% end %>
                    </td>


                    <td class=" text-center border-grey-light border p-2">
                      <!-- Order Details -->
                      <%= link_to "Order Details", order_path(order)%>
                    </td>

          				</tr>
                  <% end %>

            <% else %>

            <tr class="flex flex-col flex-no wrap sm:table-row mb-2 sm:mb-0 bg-gray-100 ">
              <h5 class="bg-red-200 p-4 text-center">No Orders Available.</h5>
            </tr>

            <% end %>



  			</tbody>
  		</table>
      <div class="p-2">
        <%= will_paginate @orders, :class => 'p-2 text-center bg-blue-100' %>
      </div>
  	</div>
  </div>
</div>

