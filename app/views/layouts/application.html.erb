<!DOCTYPE html>
<html>
  <head>
    <title>LMS</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://unpkg.com/tailwindcss@^1.0/dist/tailwind.min.css" rel="stylesheet">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>



    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

  </head>

  <body class="bg-indigo-100">

  <% if @set_landing_page == true %>
      <%= yield %>
  <% else %>
      <%= render "layouts/nav"%>
      <div class="bg-gray-100 container text-center pt-10 pb-8 mb-10 h-full">
        <br>
        <br>

        <div class="msg-container text-center">
          <% if notice || alert %>
          <span class="notice text-green-700 text-2xl"><%= notice %></span>
          <span class="alert text-red-700 text-2xl"><%= alert %></span>
          <% end %>
        </div>

        <div class="bg-gray-100">
          <div class="display-4" style="font-size:100%;">
            <!-- <h1 class="p-4 bg-red-400">
              <%= locale_to %>
            </h1> -->
            <div class="container">
              <% if user_signed_in? %>
                <%= render "layouts/top_tab_partial"%>
              <% end %>
            </div>
            <%= yield %>
          </div>
          <br>
          <div>
            <%= link_to 'Back', :back, class:"btn btn-primary" %>
          </div>
        </div>
      </div>
  <% end %>


    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="https://kit.fontawesome.com/d70832414f.js" crossorigin="anonymous"></script>


    <script type="text/javascript">

      setTimeout(function(){
        $('.msg-container').fadeOut().remove();
      }, 3000);

    </script>
  </body>
</html>
