<!DOCTYPE html>
<html>
  <head>
    <title>DeviseLoginTemplate</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://unpkg.com/tailwindcss@^1.0/dist/tailwind.min.css" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.bundle.min.js">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="//code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="bg-indigo-100">
    <%=render "layouts/nav"%>
    <div class="container text-center pt-10 bg-gray-100 h-screen">
      <div class="msg-container text-center">
        <% if notice || alert %>
        <span class="notice text-green-700 text-2xl"><%= notice %></span>
        <span class="alert text-red-700 text-2xl"><%= alert %></span>
        <% end %>
      </div>
      <div class="pl-20 pr-20">

        <div class="display-4" style="font-size:100%;">
          <div class="container">
            <div class="text-center p-4  border-t-2 border-r-2 border-b-2 border-l-4 border-gray-200">
              <div class="display-1" style="font-size:300%;">

                <% if @set_page_title == true  %>
                  <%= @page_title %>
                <% else %>
                  Test Title
                <% end %>

              </div>
            </div>
          </div>
          <%= yield %>
        </div>
      </div>
    </div>

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script type="text/javascript">

      setTimeout(function(){
        $('.msg-container').fadeOut().remove();
      }, 3000);

      // $(".msg-container").delay(4000).fadeOut().remove();

    </script>
  </body>
</html>
